<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:clickable="false"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/login_background" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="-276dp"
        android:layout_marginEnd="81dp"
        android:layout_marginBottom="670dp" />

    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:textColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="80dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="80dp"
        android:background="@drawable/edittext_border"
        android:hint="@string/fui_email_hint"
        android:textColorHint="@color/colorSecondary"
        android:padding="10dp" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="match_parent"
        android:textColor="@color/colorPrimary"
        android:layout_height="60dp"
        android:layout_below="@id/editTextTextEmailAddress"
        android:layout_marginStart="80dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="80dp"
        android:autofillHints="wrong"
        android:textColorHint="@color/colorSecondary"
        android:background="@drawable/edittext_border"
        android:hint="@string/fui_password_hint"
        android:inputType="textPassword"
        android:padding="10dp" />

    <Button
        android:id="@+id/sign_in_manually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:onClick="signIn"
        android:layout_marginEnd="80dp"
        android:layout_alignEnd="@id/editTextTextPassword"
        android:background="@drawable/sign_up_button"
        android:text="Sign In"
        android:clickable="false"
        android:alpha="0.3"
        android:textColor="@color/black"
        android:textAllCaps="false" />



    <Button
        android:id="@+id/sign_up_manually"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@id/editTextTextPassword"
        android:alpha="0.3"
        android:layout_marginStart="0dp"
        android:background="@drawable/sign_up_button"
        android:onClick="signUp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/issues"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTextTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />



</RelativeLayout>
