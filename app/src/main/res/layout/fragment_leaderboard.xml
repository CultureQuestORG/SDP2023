<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.leaderboard.LeaderboardFragment">

    <TextView
        android:id="@+id/tittle_leaderboard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_leaderboard"
        android:textColor="@color/colorPrimary"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <RelativeLayout
        android:id="@+id/current_user_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tittle_leaderboard"
        tools:layout_editor_absoluteX="0dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/current_user_profile_picture"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_centerInParent="true"
            android:src="@drawable/basic_profile_picture" />

        <TextView
            android:id="@+id/current_username"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/current_user_profile_picture"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/trophy_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:src="@drawable/trophy_icon" />

        <TextView
            android:id="@+id/current_user_score"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/trophy_icon"
            android:layout_alignStart="@+id/trophy_icon"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/leaderboard_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/leaderboard_icon_unsel" />

        <TextView
            android:id="@+id/current_user_rank"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/leaderboard_icon"
            android:layout_alignStart="@+id/leaderboard_icon"
            android:layout_marginTop="50dp"
            android:textAlignment="center"
            android:textSize="23sp"
            android:textStyle="bold" />

    </RelativeLayout>

    <View
        android:id="@+id/horizontal_bar"
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:layout_marginTop="8dp"
        android:background="#FF5722"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/current_user_relative_layout" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_view"
        android:layout_width="415dp"
        android:layout_height="413dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_bar"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintVertical_bias="0.559"
        tools:layout_editor_absoluteX="-2dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/friends_recycler_view"
        android:layout_width="415dp"
        android:layout_height="413dp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_bar"
        app:layout_constraintVertical_bias="0.559" />

    <RadioButton
        android:id="@+id/globalLeaderboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginTop="4dp"
        android:checked="true"

        android:text="Global"
        app:layout_constraintEnd_toStartOf="@+id/friendsLeaderboardButton"
        app:layout_constraintHorizontal_bias="0.324"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_bar" />

    <RadioButton
        android:id="@+id/friendsLeaderboardButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="104dp"
        android:text="Friends"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horizontal_bar" />


</androidx.constraintlayout.widget.ConstraintLayout>